<%= flash[:notice] %>

<div class="container">
  <%= form_with model: @customer, url:customer_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="ml-5">
      <h5 class="text-center", style="background-color:#eee; width:100px; margin:30px 0 30px 100px;"><b>新規会員登録</b></h5>
      <tbody>
        <tr>
          <td><%= f.label :last_name,"名前" %></td>
          <td><%= f.label :last_name,"(姓)" %></td>
          <td class="pr-5"><%= f.text_field :last_name, placeholder:"令和" %></td>
          <td><%= f.label :first_name,"(名)" %></td>
          <td><%= f.text_field :first_name, placeholder:"道子" %></td>
        </tr><br>
        
        <tr>
          <td><%= f.label :last_name_kana,"フリガナ" %></td>
          <td><%= f.label :last_name_kana,"(セイ)" %></td>
          <td class="pr-5"><%= f.text_field :last_name_kana, placeholder:"レイワ" %></td>
          <td><%= f.label :first_name_kana,"(メイ)" %></td>
          <td><%= f.text_field :first_name_kana, placeholder:"ミチコ" %></td>
        </tr><br>
        
        <tr>
          <td><%= f.label :email,"メールアドレス" %></td>
          <td></td>
          <td><%= f.email_field :email, placeholder:"sample@example.com" %></td>
          <td></td>
          <td></td>
        </tr><br>
        
        <tr>
          <td><%= f.label :post_code,"郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :post_code, placeholder:"0000000" %></td>
          <td></td>
          <td></td>
        </tr><br>
        
        <tr>
          <td><%= f.label :address,"住所" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", size: "50%"%></td>
        </tr><br>
        
        <tr class="field">
          <td><%= f.label :telephone_number,"電話番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.telephone_field :telephone_number, placeholder:"0000000000" %></td>
          <td></td>
          <td></td>
        </tr><br>
        
        <tr class="field">
          <td>
            <%= f.label :password do %>
              <% if @minimum_password_length %>
              パスワード(<%= @minimum_password_length %>文字以上)
              <% end %>
            <% end %>
          </td>
          <td></td>
          <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
          <td></td>
          <td></td>
        </tr><br>
        
        <tr class="field">
          <td><%= f.label :password_confirmation,"パスワード(確認用)" %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <td></td>
          <td></td>
        </tr><br>
        
        <tr class="field">
          <td></td>
          <td></td>
          <td>
            <div class="actions">
              <%= f.submit "新規登録", class:"btn btn-success px-5 mt-3", style:"font-weight:bold;" %></td>
            </div>
          <td></td>
          <td></td>
        </tr>
  
        <tr>
          <td><h5>既に登録済みの方</h5></td>
        </tr>
        <tr>
          <td colspan="3", class="text-center"><p><%= render "public/shared/links" %>からログインしてください。</p></td>
        </tr>
      </tbody>
    </table>
  
<% end %>


