<h1 class="text-center">注文情報入力</h1>

<div class="mx-auto w-50 border rounded bg-white p-3">
  <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>

    <div class="form-group">
      <div class="lead mb-2">支払い方法</div>
      <%= f.radio_button :payment_select, :credit_card %>
      クレジットカード
      <%= f.radio_button :payment_select, :transfer %>
      銀行振込
      </div>

    <div class="form-group mt-4">
      <div class="lead">お届け先</div>

        <%= f.radio_button :address_select, 'customer_address' %>
        <%= f.label :ご自身の住所 %>
        <%= current_customer.post_code %>
        <%= current_customer.address %>
        <%= current_customer.name %>

        <%= f.radio_button :address_select, 'shopping_address' %>
        <%= f.label :登録済住所から選択 %><br>
        <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>


      <div><%= f.radio_button :address_select, 'new_adress' %>新規住所登録</div>

      <div class="form-group has-icon">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :post_code, class:"form-control" %>
      </div>
      <div class="form-group has-icon">
        <%= f.label :住所 %>
        <%= f.text_field :address, class:"form-control" %>
      </div>
      <div class="form-group has-icon">
        <%= f.label :宛名 %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>

      <%= f.submit "確認画面へ進む", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>
</div>