<%= flash[:notice] %>
<div class='container mt-3'>
  <h3 class="ml-7", style="background-color:#eee; width:170px; margin:10px 0 30px 100px;"><b>ジャンル編集</b></h3>
  <div class='row form-inline mx-auto'>
    <div class="m-4">
      <h7>ジャンル名</h7>
    </div>
    <div class="form-group m-4">
      <%= form_with model: @genre,url: admin_genre_path(@genre), local:true do |f| %>
        <%= f.text_field :name, class: 'form-control book_title' %>
    </div>
    <div class="form-group m-4">
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
      <% end %>
    </div>
  </div>
</div>
