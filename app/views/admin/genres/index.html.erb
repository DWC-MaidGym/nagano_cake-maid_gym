<div class='container mt-4'>
    <h3>ジャンル一覧・追加</h3>
  <div class='row form-inline my-4'>
    ジャンル名
    <div class='col-m-7'>
      <%= form_with model: @genre_new, url: admin_genres_path, local:true do |f| %>
        <div class="form-group col">
          <%= f.text_field :name, class: 'form-control book_title' %>
        </div>
    </div>
    <div class='col'>
      <div class="form-group">
        <%= f.submit '登録', class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-5 mt-4'>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>