<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div>
      <h2>ジャンル一覧・追加</h2>

        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
          ジャンル名
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control book_title' %>
          </div>
          <div class="form-group">
            <%= f.submit '登録', class: 'btn btn-success' %>
          </div>
        <% end %>
    </div>
    <div>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>