<div class="container">
  <table class="m-auto", style="margin-left:210px;">
    <h5 class="text-center", style="background-color:#eee; width:140px; margin:30px 0 30px 100px;"><b>管理者ログイン</b></h5>
    <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
      <tbody>
        <tr>
            <td><%= f.label :email,"メールアドレス",style: "padding-left:0px;"%></td>
            <td><%= f.email_field :email, autofocus: true, placeholder:"sample@example.com",style: "margin-left:40px;", size: "40px" %></td>
        </tr>
        <tr>
            <td><%= f.label :password, "パスワード",style: "padding-left:0px; margin-top:20px;"%></td>
            <td><%= f.password_field :password, autocomplete: "current-password",style: "margin-left:40px;", size: "40px"  %></td>
        </tr>
        <tr>
            <% if devise_mapping.rememberable? %>
            <td><div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div></td>
            <% end %>
        </tr>
        <tr>
          <td>
            <div class="actions">
              <%= f.submit "ログイン", class: "pl-5 pr-5 btn btn-primary",style:"font-weight:bold; margin-top:20px; margin-left:40px;" %>
            </div>
          </td>
        </tr>
        </tbody>
      <% end %>
    </table>
