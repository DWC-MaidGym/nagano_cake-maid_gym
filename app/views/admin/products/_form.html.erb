<div class="form-group row justify-content-center">
<%= f.label :image,"商品画像" ,class:'form-label col-2'%>
<%= f.file_field :image_id, accept: "image/*", class:'form-control-file col-6' %><br>
</div>
<div class="form-group row justify-content-center">
<%= f.label :name,"商品名" ,class:'form-label col-2' %>
<%= f.text_field :name, class:'form-control book_body col-6' %><br>
</div>
<div class="form-group row justify-content-center">
<%= f.label :introduction,"商品説明" ,class:'form-label col-2' %>
<%= f.text_area :introduction ,class:'form-control book_title col-6' %><br>
</div>
<div class="form-group row justify-content-center">
<%= f.label :genre,"ジャンル" ,class:'form-label col-2' %>
<%= f.collection_select :genre_id, genres, :id, :name, {prompt: 'ジャンルを選択してください'} , class:' col-6'%><br>
</div>
<div class="form-group row justify-content-center">
<%= f.label :price,"税抜価格" ,class:'form-label col-2' %>
<%= f.text_field :price,class:'form-control col-6' %><br>
</div>
<div class="form-group row justify-content-center g-4">
<%= f.label :sale_status, '販売ステータス', value: true,class:'form-label col-2' %>

<%= f.radio_button :is_active, true , class:'form-check'%><p class=col-2>販売中</p>
<%= f.radio_button :is_active, false, class:'form-check' %><p class=col-2>販売停止中</p>
</div>