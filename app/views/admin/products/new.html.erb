<%= flash[:notice] %>
<div class='container'>
    <div calss="row align-items-start">
        <h3 class="text-center", style="background-color:#eee; width:180px; margin:10px 0 30px 100px;"><b>新規登録画面</b></h3>
    </div>
    <%= form_with model: @product, url: admin_products_path, local:true do |f| %>
        <%= render 'form', product: @product, genres: @genres, f: f %>
            <div class="row">
                <%= f.submit "新規登録", class: 'btn btn-success mx-auto rounded-pill' %>
            </div>
        <% end %>
</div>