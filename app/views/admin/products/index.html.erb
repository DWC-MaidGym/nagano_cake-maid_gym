<h3>商品一覧</h3>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <%= @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.genre_id %></td>
        <td><%= product.is_active %></td>
      </tr>
    <% end %>
    <%= paginate @products %>
  </tbody>
</table>