<h3>商品一覧</h3>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <td><% if product.is_active? %>
              <%= "販売中" %>
            <% else %>
              <%= "販売停止中" %>
            <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>