<div class='container'>
  <div class='row'>
    <div class="col-lg-10 m-auto">
      <h3 class="mx-auto", style="background-color:#eee; width:115px; margin:30px 0 30px 100px;"><b>商品一覧</b></h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= link_to product.name,admin_product_path(product) %></td>
              <td><%= product.price %></td>
              <td><%= product.genre.name %></td>
              <td><% if product.is_active? %>
                <%= "販売中" %>
              <% else %>
                <%= "販売停止中" %>
              <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>