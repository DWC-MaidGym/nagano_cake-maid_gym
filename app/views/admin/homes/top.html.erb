<div class='container'>
  <div class='row'>
    <div class="col-lg-10 m-auto">
　　  <h3 class="mx-auto", style="background-color:#eee; width:170px; margin:10px 0 30px 100px;"><b>注文履歴一覧</b></h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr style="background-color:#eee;">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to admin_order_path(order) do %>
                <%= order.created_at.strftime('%Y/%m/%d') %>
                <% end %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.sum_amount %></td>
              <td><%= order.status_i18n %>
              </td>
            </tr>
          <% end %>
          <%= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>