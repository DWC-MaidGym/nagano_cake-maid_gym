<div class='container'>
  <div class='row'>
    <div class="col-lg-10 m-auto">
　　  <h3 class="mx-auto", style="background-color:#eee; width:170px; margin:10px 0 30px 100px;"><b>注文履歴一覧</b></h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order_product.name %></td>
              <td><%= order_product.amount %></td>
              <td><%= order_product.order_status %>
              </td>
            </tr>
          <% end %>
          <%= paginate @order_products %>
        </tbody>
      </table>
    </div>
  </div>
</div>