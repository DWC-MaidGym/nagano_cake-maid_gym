<h2>注文履歴一覧</h2>
<table class="order-customer">
  <tr>
    <th>購入者</th>
    <td><%= @customer.name %></td>
  </tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  <tr>
    <th>配送先</th>
    <td>〒<%= @order.post_code %><%= @order.address %><%= @order.name %></td>
  </tr>
    <th>支払い方法</th>
    <td><%= @order.payment_methods_i18n[@order.payment_method] %></td>
  </tr>
    <th>注文ステータス</th>
    <td><%= f.select :status, ['入金待ち','入金確認','製作中','発送準備中','発送済み'], :selected => @order.status %>
        <%= f.submit "更新", class:"btn btn-success" %>
    </td>
  </th>
  </tr>
  <table class='table table-hover table-inverse'>
    <% @order_products.each do |order_product| %>
      <thead>
      <tr>
        <th>商品名</th>
        <th>価格(税込)</th>
        <th>個数</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= order_product.name %></td>
        <td><%= order_product.price %></td>
        <td><%= order_product.amount %></td>
        <td>
          <div>
            <%= form_with(model:[@order, order_product], url: admin_order_order_detail_path(@order,order_product), local: true) do |f| %>
              <%= f.select :order_status, options_for_select([['着手不可'],['製作待ち'],['製作中'],['製作完了']], {:selected => order_product.order_status}) %>
              <%= f.submit "更新", class:"btn btn-success" %>
            <% end %>
          </div>
        </td>
      </tr>