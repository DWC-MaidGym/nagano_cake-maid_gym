<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-1">
      <h3 class="ml-5", style="background-color:#eee; width:255px; margin:30px 0 30px 100px;"><b>注文履歴詳細</b></h3>
    </div>
  </div>
  <div class="col-6">
    <table class="order-customer">
      <tr>
        <th>購入者</th>
        <td>
          <%= link_to customer_path(@customer.id) do %>
            <%= @customer.full_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.post_code %><%= @order.address %><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_methods_i18n[@order.payment_method] %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td><%= f.select :status, ['入金待ち','入金確認','製作中','発送準備中','発送済み'], :selected => @order.status %>
            <%= f.submit "更新", class:"btn btn-success" %>
        </td>
      </tr>
      <table class='table table-hover table-inverse'>
        <% @order_products.each do |order_product| %>
          <thead>
            <tr>
              <th>商品名</th>
              <th>価格(税込)</th>
              <th>個数</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= order_product.name %></td>
              <td><%= order_product.price %></td>
              <td><%= order_product.amount %></td>
              <td><%= (order_product.price)*(order_product.amount) %></td>
              <% @total +=  order_detail.price * order_detail.amount %>
              <td>
                <div>
                  <%= form_with(model:[@order, order_product], url: admin_order_path(@order,order_product), local: true) do |f| %>
                    <%= f.select :order_status, options_for_select([['着手不可'],['製作待ち'],['製作中'],['製作完了']], {:selected => order_product.order_status}) %>
                    <%= f.submit "更新", class:"btn btn-success" %>
                  <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    <div class="col-4">
       <table>
        <tr>
          <th>商品合計</th>
          <td><%= (@total) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td>800円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= (@total + 800) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>
