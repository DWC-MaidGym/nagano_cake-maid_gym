<div class='container'>
  <div class='row'>
    <div class="col-lg-10 m-auto">
      <h3 class="mx-auto", style="background-color:#eee; width:115px; margin:30px 0 30px 100px;"><b>会員一覧</b></h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr style="background-color:#eee;">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td class="font-weight-bold text-success">有効</td>
              <% else %>
                <td class="font-weight-bold text-secondary">退会</td>
              <% end %>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>