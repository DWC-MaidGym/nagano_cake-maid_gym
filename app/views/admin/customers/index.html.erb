<div class='container'>
  <div class='row'>
    <div class="col-lg-10 mx-auto">
      <h3>会員一覧</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td>有効</td>
              <% else %>
                <td>退会</td>
              <% end %>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>