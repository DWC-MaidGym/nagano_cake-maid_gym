<div class='container'>
  <div class='row mt-4'>
    <div class="col-px-9 ml-5">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
      <table class="table table-bordered">
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %>
            <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
            <th>ステータス</th>
              <% if @customer.is_deleted == false %>
                <td class="font-weight-bold text-success">有効</td>
              <% else %>
                <td class="font-weight-bold text-secondary">退会</td>
              <% end %>
          </tr>
        </table>
    </div>
  </div>
  <div class='row'>
    <div class='col form-inline ml-5'>
      <div>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
     </div>
     <div class='m-3'>
      <%= link_to "注文一覧履歴を見る", admin_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>